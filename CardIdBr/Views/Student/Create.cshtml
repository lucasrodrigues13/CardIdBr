@using CardIdBr.Models.Student
@model StudentViewModel

@{
    ViewData["Title"] = "Adicionar Estudante";
}
<link rel="stylesheet" href="~/css/cardTemplate.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" />

<h4>Cadastrar Estudante</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="border border-black p-3">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="form-group py-2">
                    <label asp-for="FullName" class="control-label">Nome Completo</label>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                    <input asp-for="FullName" class="form-control" />
                </div>
                <div class="form-group py-2">
                    <label asp-for="Email" class="control-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input asp-for="Email" type="email" class="form-control" />
                </div>
                <div class="form-group py-2">
                    <label asp-for="Cpf" class="control-label"></label>
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                    <input asp-for="Cpf" class="form-control" />
                </div>
                <div class="form-group py-2">
                    <label asp-for="Rg" class="control-label"></label>
                    <span asp-validation-for="Rg" class="text-danger"></span>
                    <input asp-for="Rg" class="form-control" />
                </div>
                <div class="form-group py-2">
                    <label asp-for="BirthDate" class="control-label">Data de Nascimento</label>
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                    <input asp-for="BirthDate" class="form-control" />
                </div>
                <div class="form-group py-2">
                    <label asp-for="InstituitionName" class="control-label">Instituição</label>
                    <span asp-validation-for="InstituitionName" class="text-danger"></span>
                    <input asp-for="InstituitionName" class="form-control" />
                </div>
                <div class="form-group py-2">
                    <label asp-for="Course" class="control-label">Curso</label>
                    <span asp-validation-for="Course" class="text-danger"></span>
                    <input asp-for="Course" class="form-control" />
                </div>
                <div class="form-group py-2">
                    <label asp-for="SchoolLevel" class="control-label">Escolaridade</label>
                    <span asp-validation-for="SchoolLevel" class="text-danger"></span>
                    <input asp-for="SchoolLevel" class="form-control" />
                </div>
                <div class="form-group py-2">
                    <span asp-validation-for="UseCode" class="text-danger"></span>
                    <input type="hidden" asp-for="UseCode" class="form-control" />
                </div>
                <div class="form-group py-2">
                    <label asp-for="Photo" class="control-label">Foto do Rosto</label>
                    <span asp-validation-for="Photo" class="text-danger"></span>
                    <input type="file" asp-for="Photo" class="form-control" />
                </div>
                <div class="row pt-4">
                    <div class="col-6 col-md-6">
                        <button type="submit" id="btnSave" class="btn btn-primary form-control">Criar</button>
                    </div>
                    <div class="col-6 col-md-6">
                        <a asp-action="Index" class="btn btn-outline-primary border form-control text-bg-light">
                            Voltar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <partial name="_CardIdPartial.cshtml" />
    <partial name="_PhotoCropperModal.cshtml" />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script type="text/javascript" src="~/js/student/card.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    }
}
